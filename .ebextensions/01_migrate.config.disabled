option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: tourism_api.wsgi:application

container_commands:
  01_migrate:
    command: "bash -lc 'cd backend && python manage.py migrate --noinput || true'"
    leader_only: true
  02_collectstatic:
    command: "bash -lc 'cd backend && python manage.py collectstatic --noinput || true'"
    leader_only: true
