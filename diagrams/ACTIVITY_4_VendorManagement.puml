@startuml Vendor Management Activity

title Vendor Restaurant Management

skinparam backgroundColor #FEFEFE

|#FFF3E0|Vendor|
|#EEEEEE|System|

start

|Vendor|
:Login to Portal;

|System|
:Verify Credentials;

if (Approved?) then (yes)
    :Load Dashboard;
    
    |Vendor|
    switch (Action?)
        case (Update Profile)
            :Edit Restaurant Details;
            :Save Changes;
            
            |System|
            :Update Database;
            
        case (Manage Menu)
            |Vendor|
            :Add/Edit Menu Items;
            :Set Prices;
            
            |System|
            :Save Menu;
            
        case (Toggle Open/Closed)
            |Vendor|
            :Click Toggle;
            
            |System|
            :Update is_open;
            
        case (Manage Reservations)
            |Vendor|
            :View Reservations;
            :Confirm/Reject;
            
            |System|
            :Notify Customer;
            
        case (View Analytics)
            |System|
            :Generate Charts;
            
            |Vendor|
            :View Metrics;
    endswitch
else (no)
    |System|
    :Show Pending Message;
endif

stop

@enduml
