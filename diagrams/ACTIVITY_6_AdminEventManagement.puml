@startuml Admin Event Management Activity

title Admin Event Management

skinparam backgroundColor #FEFEFE

|#FFEBEE|Admin|
|#EEEEEE|System|

start

|Admin|
:Login to Admin Portal;

switch (Action?)
    case (Create Event)
        :Fill Event Details;
        
        if (Recurring?) then (yes)
            :Set Recurrence Type;
        else (no)
        endif
        
        if (Custom Form?) then (yes)
            :Add Form Fields;
        else (no)
        endif
        
        :Publish Event;
        
        |System|
        :Save to Database;
        :Display on Portal;
        
    case (Manage Registrations)
        |Admin|
        :View Registrations;
        
        while (Has Pending?) is (yes)
            :Review Registration;
            
            if (Approve?) then (yes)
                :Confirm;
                |System|
                :Send Email;
            else (no)
                |Admin|
                :Reject;
                |System|
                :Send Email;
            endif
        endwhile (no)
        
        |Admin|
        :Export List;
        
    case (Cancel Event)
        |Admin|
        :Select Event;
        :Confirm Cancel;
        
        |System|
        :Notify Registrants;
        :Send Cancellation Emails;
endswitch

stop

@enduml
