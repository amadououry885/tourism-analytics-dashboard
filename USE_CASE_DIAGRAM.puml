@startuml Tourism Analytics Dashboard - Use Case Diagram

title Tourism Analytics Dashboard - Use Case Diagram\nKedah State Tourism Platform

left to right direction
skinparam packageStyle rectangle
skinparam backgroundColor #FEFEFE
skinparam actorStyle awesome
skinparam usecase {
    BackgroundColor #F8F9FA
    BorderColor #343A40
    ArrowColor #495057
}

' ==========================================
'              ACTORS
' ==========================================

actor "Tourist/Visitor" as Tourist #LightBlue
actor "Vendor\n(Restaurant Owner)" as Vendor #Orange
actor "Stay Owner\n(Hotel/Homestay)" as StayOwner #Purple
actor "Place Owner\n(Attraction)" as PlaceOwner #Green
actor "Admin\n(Tourism Council)" as Admin #Red
actor "System\n(Automated)" as System #Gray

' ==========================================
'         PUBLIC TOURISM PORTAL
' ==========================================

rectangle "Public Tourism Portal" #E3F2FD {
    
    usecase "Browse Destinations" as UC_BrowsePlaces
    usecase "View Place Details" as UC_ViewPlace
    usecase "Search Places" as UC_SearchPlaces
    usecase "Filter by Category" as UC_FilterCategory
    usecase "View on Map" as UC_ViewMap
    
    usecase "Browse Restaurants" as UC_BrowseRestaurants
    usecase "View Restaurant Details" as UC_ViewRestaurant
    usecase "View Menu" as UC_ViewMenu
    usecase "Make Reservation" as UC_MakeReservation
    usecase "View Reviews" as UC_ViewReviews
    
    usecase "Browse Accommodations" as UC_BrowseStays
    usecase "View Stay Details" as UC_ViewStay
    usecase "Contact Owner" as UC_ContactOwner
    usecase "Book via Affiliate" as UC_BookAffiliate
    
    usecase "Browse Events" as UC_BrowseEvents
    usecase "View Event Details" as UC_ViewEvent
    usecase "Register for Event" as UC_RegisterEvent
    usecase "Set Event Reminder" as UC_SetReminder
    usecase "Cancel Registration" as UC_CancelRegistration
    
    usecase "View Analytics\nDashboard" as UC_ViewAnalytics
    usecase "View Sentiment\nAnalysis" as UC_ViewSentiment
}

' ==========================================
'           VENDOR PORTAL
' ==========================================

rectangle "Vendor Portal (Restaurants)" #FFF3E0 {
    
    usecase "Register as Vendor" as UC_RegisterVendor
    usecase "Login to Portal" as UC_VendorLogin
    usecase "Manage Restaurant\nProfile" as UC_ManageRestaurant
    usecase "Update Menu Items" as UC_UpdateMenu
    usecase "Set Opening Hours" as UC_SetHours
    usecase "Toggle Open/Closed" as UC_ToggleOpen
    usecase "Manage Reservations" as UC_ManageReservations
    usecase "Create Promotions" as UC_CreatePromotion
    usecase "View Restaurant\nAnalytics" as UC_VendorAnalytics
    usecase "Respond to Reviews" as UC_RespondReviews
}

' ==========================================
'         STAY OWNER PORTAL
' ==========================================

rectangle "Stay Owner Portal (Accommodations)" #F3E5F5 {
    
    usecase "Register as\nStay Owner" as UC_RegisterStayOwner
    usecase "Login to Portal" as UC_StayLogin
    usecase "Manage Property\nProfile" as UC_ManageStay
    usecase "Upload Property\nImages" as UC_UploadImages
    usecase "Set Pricing" as UC_SetPricing
    usecase "Toggle Availability" as UC_ToggleAvailability
    usecase "Update Contact Info" as UC_UpdateContact
    usecase "View Booking\nInquiries" as UC_ViewInquiries
    usecase "View Property\nAnalytics" as UC_StayAnalytics
}

' ==========================================
'         PLACE OWNER PORTAL
' ==========================================

rectangle "Place Owner Portal (Attractions)" #E8F5E9 {
    
    usecase "Register as\nPlace Owner" as UC_RegisterPlaceOwner
    usecase "Manage Attraction\nProfile" as UC_ManagePlace
    usecase "Update Opening\nHours" as UC_UpdatePlaceHours
    usecase "Set Admission\nPricing" as UC_SetAdmission
    usecase "Upload Attraction\nImages" as UC_UploadPlaceImages
    usecase "View Attraction\nAnalytics" as UC_PlaceAnalytics
}

' ==========================================
'           ADMIN PORTAL
' ==========================================

rectangle "Admin Portal (Tourism Council)" #FFEBEE {
    
    usecase "Login as Admin" as UC_AdminLogin
    usecase "View System\nDashboard" as UC_AdminDashboard
    
    usecase "Manage Users" as UC_ManageUsers
    usecase "Approve Vendor\nRegistrations" as UC_ApproveVendor
    usecase "Approve Stay Owner\nRegistrations" as UC_ApproveStayOwner
    usecase "Reject Registration" as UC_RejectRegistration
    
    usecase "Manage Places" as UC_AdminManagePlaces
    usecase "Create New Place" as UC_CreatePlace
    usecase "Edit Place" as UC_EditPlace
    usecase "Delete Place" as UC_DeletePlace
    
    usecase "Manage Events" as UC_AdminManageEvents
    usecase "Create Event" as UC_CreateEvent
    usecase "Edit Event" as UC_EditEvent
    usecase "Cancel Event" as UC_CancelEvent
    usecase "Manage Event\nRegistrations" as UC_ManageEventRegs
    usecase "Approve Event\nRegistration" as UC_ApproveEventReg
    
    usecase "Create Custom\nRegistration Form" as UC_CreateRegForm
    usecase "Add Form Fields" as UC_AddFormFields
    
    usecase "View Analytics\nReports" as UC_ViewReports
    usecase "View Sentiment\nReports" as UC_ViewSentimentReports
    usecase "Export Data" as UC_ExportData
    
    usecase "Manage All\nRestaurants" as UC_AdminManageVendors
    usecase "Manage All\nAccommodations" as UC_AdminManageStays
}

' ==========================================
'         AUTOMATED SYSTEM
' ==========================================

rectangle "Automated Processes" #EEEEEE {
    
    usecase "Fetch Social\nMedia Posts" as UC_FetchPosts
    usecase "Analyze Sentiment" as UC_AnalyzeSentiment
    usecase "Classify Tourism\nContent" as UC_ClassifyContent
    usecase "Calculate\nEngagement Metrics" as UC_CalcMetrics
    usecase "Send Event\nReminders" as UC_SendReminders
    usecase "Generate Recurring\nEvent Instances" as UC_GenerateRecurring
    usecase "Send Registration\nConfirmation Email" as UC_SendConfirmation
    usecase "Update Analytics\nAggregations" as UC_UpdateAggregations
}

' ==========================================
'         ACTOR RELATIONSHIPS
' ==========================================

